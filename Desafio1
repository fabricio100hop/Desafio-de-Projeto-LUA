local function getProgressBar(attribute)
	local fullBar = "â–ˆ"
	local emptyBar = ""
	
	local result = ""
		for i = 1, 10, 1 do
		if i <= attribute then
			result = result..fullBar
		else
			result = result..emptyBar
		end
	end
	return result
end

